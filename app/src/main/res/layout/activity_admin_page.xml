<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_count_all_account"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng số tài khoản đã đăng ký : 0"
                android:textSize="22dp"
                android:textStyle="bold"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/user_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="User"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#DF0851"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/admin_view"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <TextView
                android:id="@+id/user_line"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:background="#DF0851"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/admin_line"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:text="Admin"
                android:layout_weight="1"/>

        </LinearLayout>


        <ListView
            android:id="@+id/lv_all_user"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"/>

        <Button
            android:id="@+id/add_new_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo thêm tài khoản admin"/>

    </LinearLayout>

</RelativeLayout>