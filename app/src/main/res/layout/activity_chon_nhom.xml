<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChonNhom">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/quaylai"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/icBackAtChonNhom"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textSize="22dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:text="Chọn nhóm"
                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/icFindAtChonNhom"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:src="@drawable/timkiem"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:weightSum="3"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:textColor="#454343"
                android:text="ĐI VAY &amp; CHO VAY"
                android:id="@+id/divayvachovay"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="KHOẢN CHI"
                android:textColor="#454343"
                android:textAlignment="center"
                android:id="@+id/khoanchi"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:text="KHOẢN THU"
                android:textColor="#454343"
                android:id="@+id/khoanthu"
                android:textAlignment="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:id="@+id/behindDivayvachovay"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:id="@+id/behindKhoanchi"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:id="@+id/behindKhoanthu"
                />
        </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_itemNhom"/>
    </LinearLayout>

</RelativeLayout>